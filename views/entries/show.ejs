<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= entry.artist %>: <%= entry.album %></title>
    <style>
      img {
        max-width: 300px;
        max-height: auto;
      }
    </style>
  </head>

  <body>
    <header><%- include('../partials/nav.ejs') %></header>
    <main>
      <h1>
        <strong><%= entry.artist %></strong>
      </h1>
      <h2><em><%= entry.album %></em></h2>

      <section>
        <!-- <h2>Attributes:</h2> -->
        <img src="<%= entry.img %>" />
        <br />
        <p><%= entry.comments %></p>
        <br />
        <p>- <%= entry.user %></p>
      </section>

      <% if(currentUser) {%>
      <section>
        <a href="/entries/<%= entry._id %>/edit">Edit</a>
      </section>

      <section>
        <form action="/entries/<%= entry._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete Entry" />
        </form>
        <% } %>
      </section>
    </main>
  </body>
</html>
