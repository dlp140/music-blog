<style>
  nav {
    padding: 0px 0px 30px 0px;
    display: flex;
    justify-content: space-around;
    background-color: #edeef6;
  }
  input.nav {
    background-color: green;
    width: 33vw;
    color: white;
    border: solid black 1px;
    /* border-radius: 5px; */
    padding: 30px 30px 30px 30px;
  }
  .nav:hover {
    background-color: blue;
    transition: 0.8s;
  }
</style>
<nav>
  <% if(currentUser) { %>
  <form action="/entries">
    <input class="nav" type="submit" value="HOME" />
  </form>
  <form action="/entries/new">
    <input class="nav" type="submit" value="NEW ENTRY" />
  </form>
  <form action="/sessions?_method=DELETE" method="POST">
    <input
      class="nav"
      type="submit"
      value="LOG OUT (<%= currentUser.username %>)"
    />
  </form>
  <% } else { %>
  <form action="/entries">
    <input class="nav" type="submit" value="HOME" />
  </form>
  <form action="/users/new">
    <input class="nav" type="submit" value="REGISTER" />
  </form>
  <form action="/sessions/new">
    <input class="nav" type="submit" value="LOGIN" />
  </form>
  <% } %>
</nav>
